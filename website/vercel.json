{
  "builds": [
      {
        "src": "website/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb"}
      },
      {
        "src": "scripts/cron.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/scripts/(.*)",
        "dest": "scripts/cron.py"
      },
      {
        "src": "/(.*)",
        "dest": "website/wsgi.py"
      }
    ],
      "crons": [
        {
          "path": "/scripts/cron",
          "schedule": "0 12 * * *"
        }
      ]
  }